{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "target": "ES2015",
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "index.ts",
        "filesystem-database/**/*"
    ]
}