{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "target": "ES5",
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "index.ts"
    ]
}